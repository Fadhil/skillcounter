<%= form_for @organizer do |f| %>
    <% if @organizer.errors.any? %>
      <div id="error_explanation">
        <% @organizer.errors.full_messages.each do |msg| %>
          <%flash[:error] = msg %>
        <% end %>
       
      </div>
    <% end %>
    
    
    <div class="row">
      
      <div class="action">
       
    
        
    </div>
        <div class="input-group col-xs-6">
          <span class="input-group-addon"><%= f.label :Name %></span>
          <%= f.text_field :name, class: "form-control" %>
        </div>        
    </div>

    <div class="row">
        <div class="input-group col-xs-6">
          <span class="input-group-addon"><%= f.label :email %></span>
          <%= f.text_field :email, class: "form-control" %>
        </div>        
    </div>

    <div class="row">
        <div class="input-group col-xs-6">
          <span class="input-group-addon"><%= f.label :Address %></span>
          <%= f.text_field :address, class: "form-control" %>
        </div>        
    </div>
    
    <div class="row">
        <div class="input-group col-xs-6">
          <span class="input-group-addon"><%= f.label "Contact number" %></span>
          <%= f.text_field :contact_number, class: "form-control" %>
        </div>        
    </div>

    <div class="row">
        <div class="input-group col-xs-6">
          <span class="input-group-addon"><%= f.label :password %></span>
          <%= f.password_field :password, class: "form-control" %>
        </div>        
    </div>

    <div class="row">
        <div class="input-group col-xs-6">
          <span class="input-group-addon"><%= f.label :password_confirmation %></span>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>        
    </div>

    <div class="row">
        <div class="input-group col-xs-6">
          <span class="input-group-addon"><%= f.label "Avatar" %></span>
          <%= f.file_field :avatar, class: "form-control" %>
        </div>        
    </div>

    <div class="row">
        <div class="input-group col-xs-6">
          <span class="input-group-addon"><%= f.label "Biodata" %></span>
          <%= f.file_field :biodata, class: "form-control" %>
        </div>        
    </div>


    

    <div class="row">
        <div class="input-group col-xs-6">
          <%= f.submit "Submit",  class: "btn btn-default" %>
        </div>             
    </div>
   
<% end %>    