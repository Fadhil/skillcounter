<%= form_for @vet do |f| %>
    <% if @vet.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@vet.errors.count, "error") %> prohibited this post from being saved:</h2>
     
        <ul>
        <% @vet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    
        
    
    <div class="container">
        
        <div class="row">
            <div class="col-md-3 col-sm-3">
                <img src= <%= @vet.avatar.url(:thumb) %> alt="event" class="img-thumbnail">
            </div>
            <div class="col-md-9 col-sm-9">
                <div class="row">
                    <form class="form-horizontal" role="form">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="vetname" class="col-sm-3 control-label">Name</label>
                                <div class="col-sm-8">
                                    <%= f.text_field :name, class: "form-control" %>
                                   
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="licence_number" class="col-sm-3 control-label">Licence number</label>
                                <div class="col-sm-8">
                                    <%= f.text_field :licence_number, class: "form-control" %>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="ic_number" class="col-sm-3 control-label">IC number</label>
                                <div class="col-sm-8">
                                   
                                    <%= f.text_field :ic_number, class: "form-control" %>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="phone" class="col-sm-3 control-label">Contact number</label>
                                <div class="col-sm-8">
                                   <%= f.text_field :contact_number, class: "form-control" %>
                                   
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="col-sm-3 control-label">Email</label>
                                <div class="col-sm-8">
                                     <%= f.text_field :email, class: "form-control" %>
                                    
                                </div>
                            </div>
                              <div class="form-group">
                                <label for="Avatar" class="col-sm-3 control-label">Avatar</label>
                                <div class="col-sm-8 ">
                                 <%= f.file_field :avatar, class: "form-control" %>
                                </div>
                              </div>
                            
                        </div>
                        <div class="col-md-offset-9 col-md-3">
                              <%= f.submit "Save",  class:"btn btn-default btn-success" %>
                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    
    
    
    
    
    
<% end %>    