<h1>Vet Profile</h1>
<table>
    <tr>
        <td>Email:</td>
        <td><%= @vet.email %></td>
    </tr>
    <tr>
        <td>Name:</td>
        <td><%= @vet.name%></td>
    </tr>
    <tr>
        <td>IC Number:</td>
        <td><%= @vet.ic_number %></td>
    </tr>
    <tr>
        <td>Phone Number:</td>
        <td><%= @vet.contact_number %></td>
    </tr>
    <tr>
        <td>Licence Number:</td>
        <td><%= @vet.licence_number %></td>
    </tr>
</table>
<table>
    <tr><td>Points and Activities</td></tr>
    <tr>
        <td>Current accumulated points:</td>
        <td><%= (@vet.current_points + @vet.expiring_points) %></td>
    </tr>
    <tr>
        <td>Points expiring this year:</td>
        <td><%= @vet.expiring_points %></td>
    </tr>
    <tr><td></td><td><%= link_to "Redeem Licence", '#' %></td></tr>
</table>

