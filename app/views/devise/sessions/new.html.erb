
<div class="site-wrapper-sign-in">
        <div class="container">
            <h1><span class="glyphicon glyphicon-fire"></span> Skill Counter</h1>
            
            <div class="col-md-6 col-md-offset-3 col-xs-12">
           <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"form-signin") do |f| %>
                <h4 class="form-signin-heading">Sign In</h4>
               
                <%= f.email_field :email, autofocus:true, class:"form-control input-lg", placeholder:"Email", required:""  %>
               
                 <%= f.password_field :password, autocomplete: "off", class:"form-control input-lg", placeholder:"Password", required:""  %>
                 <%= f.submit "Sign in", class:"btn btn-lg btn-primary btn-block" %>
                  <% if devise_mapping.rememberable? -%>
                  <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                  </div>
                  <% end -%>
            <% end %>
            <%= render "devise/shared/links" %>
            </div>
             </div>
    </div>


