    <!-- MAIN -->
    <div class="site-wrapper-sign-in">
      <div class="container">
        <h1><span class="glyphicon glyphicon-fire"></span> Skill Counter</h1>
        <form class="form-signin" role="form">
          <h4 class="form-signin-heading">Payment</h4>
          <p>You will need to make a payment of RM <span class="text-success"><% fee = Payment.find_by(description: "Profile claim fee") %><%= number_with_precision(fee.fee, precision: 2) %></span> before you can claim your profile</p>
          <p>Click below to proceed with payment</p>
          <br>
<!--      <input type="text" class="form-control input-lg" placeholder="Credit card no." required="" autofocus="">
