<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header custom-with_input">
                <h1>Payments</h1>
            </div>
            <ul class="media-list">
                <% @payments.each do |payment| %>
                    <a href="<%= payment_path(payment) %>">
                        <li class="media">
                            <div class="media-body">
                                <div class="col-md-12 col-sm-12">
                                    <table>
                                        <tr>
                                            <td style="padding-right:10px"><h3><span class="glyphicon glyphicon-usd"></span></h3></td>
                                            <td>
                                                <table>
                                                    <tr><td><h3 class="media-heading"><%= payment.description %></h3></td></tr>
                                                    <tr><td><span>Fee: RM <%= number_with_precision(payment.fee, precision: 2) %></span></td></tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </li>
                    </a>
                <% end %>
            </ul>
        </div>
    </div>
</div>