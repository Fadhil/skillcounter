
<%= form_for :user, url: {controller: "sessions", action: "create"}, method: "post" do |f| %>
    <table>
        <tr>
            <td><%= f.label ("Email") %></td>
            <td><%= f.text_field("email") %></td>
        </tr>
        <tr>
            <td><%= f.label("Password") %></td>
            <td><%= f.password_field("password") %></td>
        </tr>
        <tr>
            <td><%= f.submit("Sign In") %></td>
        </tr>
    </table>
<% end %>
