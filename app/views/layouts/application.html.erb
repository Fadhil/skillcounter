<!DOCTYPE html>
<html>
<head>
  <title>SkillCounter</title>
  <%= include_gon %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  
</head>
<body>
  
 
  <%if current_user
   
      if current_user.is_admin? and current_user.is_organizer? and current_user.is_vet?
        navbar = render 'layouts/headerAOV'
        
        elsif  current_user.is_vet? and current_user.is_organizer?
        
        navbar = render 'layouts/headerVetOr'
        
        elsif  current_user.is_admin?
        
        navbar = render 'layouts/headerAdmin'
        
        elsif  current_user.is_organizer?
        
        navbar = render 'layouts/headerOrganizer'
        
        elsif  current_user.is_vet?
        
        navbar = render 'layouts/headerVet'
        
        
        else
        
        navbar = render 'layouts/header'
      end
    else
          navbar = render 'layouts/header'
       
    end
       %>
       
  <%= navbar %>
  
  <%= flash_messages %>
  <%= yield %>

</body>
</html>
