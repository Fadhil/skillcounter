<table class="table table-striped table-hover table-users">
    			<thead>
    				<tr>
    					
    					<th>ID</th>
    					<th>Name</th>
    					<th class="hidden-phone">Email</th>
    				
    					<th></th>
    					<th></th>
    				</tr>
    			</thead>

    			<tbody>
    				<% @users.each do |user| %>
    				<tr>
                        
    				    <td><%=user.id%></td>
    					<td><%=user.name%></td>
    				
    					<td class="hidden-phone"><%=user.email%></td>
    					
    					   					
                    	
                    	  					
    					<td>
    					<a href="<%= edit_user_path(user)%>", title="edit"><i class="glyphicon glyphicon-edit"></i> 
                    	  </a> 
    					</td>
                           
                        <td>
                           	
                           	 <%= link_to 'Delete', user, method: :delete, :confirm =>"Delete #{user.name}'s account", class: "btn btn-danger" %>
                           
                            
                            
                        </td>
                    </tr>
				
                    <% end %>   
    				
                
	               </tbody>

    		</table>
    		


     
    
    
