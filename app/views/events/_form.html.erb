<%= form_for @event, :html => {class: "form-horizontal" } do |f| %>
    <% if @event.errors.any? %>
       <div id="error_explanation">
            <% @event.errors.full_messages.each do |msg| %>
                <% flash[:error] = msg %>
            <% end %>
        </div>
    <% end %>
    <div class="form-group">
        <label for="EventName" class="col-sm-3 control-label">Event Name</label>
        <div class="col-sm-6"><%= f.text_field :event_name, class:"form-control typeahead", :data => {:provide => ".typeahead"} %></div>
    </div>
    <div class="form-group">
        <label for="StartDate" class="col-sm-3 control-label">Start Date</label>
        <div class=" col-sm-6 ">
            <div class='input-group date datetimepicker1'>
                <%= f.text_field :start_date_time, class:"form-control", 'data-date-format'=>"YYYY/MM/DD" %>
                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="EndDate" class="col-sm-3 control-label">End Date</label>
        <div class="col-sm-6 ">
            <div class='input-group date datetimepicker1'>
                <%= f.text_field :end_date_time, class:"form-control", 'data-date-format'=>"YYYY/MM/DD" %> 
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="Description" class="col-sm-3 control-label">Description</label>
        <div class="col-sm-6"><%= f.text_field :description, class:"form-control" %></div>
    </div>
    <div class="form-group">
        <label for="PageUrl" class="col-sm-3 control-label">Event Page Url</label>
        <div class="col-sm-6"><%= f.text_field :event_page_url, class:"form-control" %></div>
    </div>
    <div class="form-group">
        <label for="Location" class="col-sm-3 control-label">Location</label>
        <div class="col-sm-6"><%= f.text_field :location, class: "form-control" %></div>
    </div>
    <div class="form-group">
        <label for="Speaker" class="col-sm-3 control-label">Speaker</label>
        <div class="col-sm-6"><%= f.text_field :speaker, class: "form-control"%></div>
    </div>
    <div class="form-group">
        <label for="speakerBioUpload" class="col-sm-3 control-label">Speaker Bio</label>
        <div class="col-sm-6"><%= f.file_field :speaker_bio, class: "form-control"%></div>
    </div>
    <div class="form-group">
        <label for="speakerBioLink" class="col-sm-3 control-label">Link to Bio</label>
        <div class="col-sm-6"><%= f.text_field :bio_url, class: "form-control" %></div>
    </div>
    <div class="form-group">
        <label for="Schedule" class="col-sm-3 control-label">Schedule</label>
        <div class="col-sm-6"><%= f.file_field :schedule, class: "form-control"%></div>
    </div>
    <div class="form-group">
        <label for="Poster" class="col-sm-3 control-label">Poster</label>
        <div class="col-sm-6"><%= f.file_field :poster, class: "form-control"%></div>
    </div>
    <% unless f.object.type == 'ExternalEvent' %> <!-- We don't expect Vets to know about number of participants for an external event -->
        <div class="form-group">
            <label for="Points" class="col-sm-3 control-label">Number of Participants</label>
            <div class="col-sm-6"><%= f.text_field :number_participants, class: "form-control" %></div>
        </div>
    <% end %>
    <div class="form-group">
        <label for="Points" class="col-sm-3 control-label">Points</label>
        <div class="col-sm-6"><%= f.text_field :point, class: "form-control" %></div>
    </div>
    <div class="form-group">
        <label for="Category" class="col-sm-3 control-label">Category</label>
        <div class="col-sm-6"><%= f.select :category, ["Seminar","Clinic","Training","Forum"] %></div>
    </div>
    <div class="col-md-offset-9 col-md-3">
        <%= f.submit "Save", class:"btn btn-default btn-success" %>
    </div>


    <script type="text/javascript">
        $(function () {
            $('.datetimepicker1').datetimepicker({pickTime: false});
        });
    </script>
    <script type="text/javascript">
        $(function ()) {
            $('.typeahead').typeahead({return data})
        });
    </script>
    
    
<% end %>